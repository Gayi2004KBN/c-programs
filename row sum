#include<stdio.h>
int main()
{
	int i,j,sum,r,c;
	int a[20][20];
	printf("enter rows");
	scanf("%d",&r);
	printf("enter columns");
	scanf("%d",&c);
	printf("enter elements into the matrix");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			scanf("%d",a[i][j]);
		}
	}
		for(i=0;i<r;i++)
	{
		sum=0;
		for(j=0;j<c;j++)
		{
		sum=sum+a[i][j];
	}
	printf("%d row sum=%d",i+1,sum);
	sum=0;
}
	return 0;
}
